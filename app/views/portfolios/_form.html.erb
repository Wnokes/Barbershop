<%= form_for @portfolio do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :description, "Release Date" %>:
  <%= f.text_field :description %><br />

  <%= f.label :main_image %>:
  <%= f.file_field :main_image %><br />

  <%= f.label :thumbnail_image %>:
  <%= f.file_field :thumbnail_image %><br />

  <%= f.submit %>
<% end %>